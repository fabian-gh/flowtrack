<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_height"
    android:layout_margin="@dimen/activity_padding"
    card_view:cardBackgroundColor="@color/cardview_shadow_end_color"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <!--<ImageView
                android:id="@+id/trackImage"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:tint="@color/text_primary"
                android:layout_centerInParent="true" />-->

            <TextView
                android:id="@+id/trackName"
                android:background="?android:selectableItemBackground"
                android:focusable="false"
                android:clickable="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="30sp"
                android:textColor="@color/text_primary_inverted"
                android:gravity="center_horizontal|center_vertical" />
        </RelativeLayout>

        <TextView
            android:id="@+id/trackDateTime"
            android:background="?android:selectableItemBackground"
            android:focusable="false"
            android:clickable="false"
            android:paddingTop="@dimen/text_padding_top"
            android:paddingLeft="@dimen/text_padding"
            android:paddingRight="@dimen/text_padding"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textColor="@color/text_secondary"
            android:gravity="bottom" />

        <TextView
            android:id="@+id/trackDescription"
            android:background="?android:selectableItemBackground"
            android:focusable="false"
            android:clickable="false"
            android:paddingTop="@dimen/text_padding"
            android:paddingLeft="@dimen/text_padding"
            android:paddingRight="@dimen/text_padding"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:textColor="@color/text_primary_inverted"
            android:gravity="start" />

        <TextView
            android:id="@+id/trackNote"
            android:background="?android:selectableItemBackground"
            android:focusable="false"
            android:clickable="false"
            android:paddingTop="@dimen/text_padding"
            android:paddingLeft="@dimen/text_padding"
            android:paddingRight="@dimen/text_padding"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:textSize="12sp"
            android:textColor="@color/text_primary_inverted"
            android:gravity="start" />

    </LinearLayout>

</android.support.v7.widget.CardView>