<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="de.fm.flowtrack.activity.AddActivity">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:hint="@string/add_hint_title" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/add_title"
        android:layout_alignParentStart="true"
        android:id="@+id/linear_layout"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.03"
            android:id="@+id/horizontal_layout">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/drawable_description"
                android:src="@drawable/drawable_description"
                android:layout_gravity="center" />

            <Space
                android:layout_width="@dimen/spacer"
                android:layout_height="match_parent"
                android:id="@+id/spacer_description" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/add_descrption"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/text_padding"
                android:hint="@string/add_hint_description" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
